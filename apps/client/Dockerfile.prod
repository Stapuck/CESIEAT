# Build stage
FROM node:18 AS builder

WORKDIR /app

# Copier les fichiers de configuration du monorepo
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copier le package shared
COPY packages ./packages/

# Copier l'application client
COPY apps/client ./apps/client/

# Installer PNPM
RUN npm install -g pnpm@10.7.1

# Installer les d√©pendances du monorepo
RUN pnpm install

# Construire le package shared
RUN cd packages/shared && pnpm run build

# Construire l'application client
WORKDIR /app/apps/client
RUN pnpm run build

# Stage 2: Nginx pour servir l'application
FROM nginx:alpine

# Copier le build de l'application
COPY --from=builder /app/apps/client/dist /usr/share/nginx/html/client

# Copier la configuration nginx
COPY apps/client/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]